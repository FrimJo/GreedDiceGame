<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                tools:context="com.fredrikux.greed.views.BoardActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="3">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/score_label_text"
                android:id="@+id/score_label"
                android:layout_column="0"
                android:layout_weight="0.25"
                android:width="100dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/player_label_text"
                android:id="@+id/player_label"
                android:layout_column="1"
                android:layout_weight="0.5"
                android:gravity="center"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/saved_label_text"
                android:id="@+id/saved_label"
                android:layout_column="2"
                android:layout_weight="0.25"
                android:width="100dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_weight="3">
            <TextView
                android:text="750"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_text"
                android:textSize="@dimen/headline_text_size"
                android:textColor="@color/white"
                android:layout_column="0"
                android:layout_weight="0.3"
                android:width="100dp"
                android:gravity="center"/>
            <TextView
                android:text="Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/player_text"
                android:textSize="@dimen/headline_text_size"
                android:textColor="@color/white"
                android:layout_column="1"
                android:gravity="center"
                android:layout_weight="0.4"/>
            <TextView
                android:text="4550"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saved_text"
                android:textSize="@dimen/headline_text_size"
                android:textColor="@color/white"
                android:layout_column="2"
                android:layout_weight="0.3"
                android:width="100dp"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>


    <GridView
        android:layout_width="fill_parent"
        android:layout_height="192dp"
        android:id="@+id/dice_view"
        android:numColumns="@integer/numColumns"
        android:verticalSpacing="24dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical|center_horizontal">
        <Button
            android:minWidth="64dp"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:singleLine="false"
            android:background="@drawable/button_raised"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROLL"
            android:id="@+id/roll_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:enabled="false"/>

        <Button
            android:minWidth="64dp"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:singleLine="false"
            android:background="@drawable/button_raised"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/save_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:enabled="false"/>
        <Button
            android:minWidth="64dp"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:singleLine="false"
            android:background="@drawable/button_raised"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="END TURN"
            android:id="@+id/end_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:enabled="false"/>
    </RelativeLayout>

</LinearLayout>
